<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/labelCourseNo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#00B4D6"
            android:textStyle="bold"
            android:text="COURSE NUMBER"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#00B4D6" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/valueCourseNo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="12345"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/labelCourseTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#00B4D6"
            android:textStyle="bold"
            android:text="COURSE TITLE"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#00B4D6" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/valueCourseTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="Mobile Computing"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/labelCreditHours1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#00B4D6"
            android:textStyle="bold"
            android:text="CREDIT HOURS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#00B4D6" />

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/valueCreditHours1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="3:00"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/labelDays1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#00B4D6"
            android:textStyle="bold"
            android:text="DAYS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#00B4D6" />

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/valueDays1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="TR"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/labelTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#00B4D6"
            android:textStyle="bold"
            android:text="TIME"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#00B4D6" />

    <TableRow
        android:id="@+id/tableRow10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/valueTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="1:30-2:45pm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

</TableLayout>